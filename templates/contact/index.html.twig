{% extends 'base.html.twig' %}

{% block title %}Contacts{% endblock %}

{% block main_content %}
    <div class="main-content">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="d-inline-block">Contacts</h2>
                <a role="button" class="btn active btn-primary float-right" href="{{ path('add_contact') }}">Add New contact</a>
            </div>
        </div>
        <hr/>
        {% for contact in contacts %}
            {% if loop.index % 2 == 1 %}
                <div class="row">
            {% endif %}

            <div class="col-sm-6">
                <div class="card-header">{{ contact.name }}</div>
                <div class="card-body">
                    <h5 class="card-title">{{ contact.email }}</h5>
                    <p class="card-text">{{ contact.phone }}</p>
                </div>
            </div>
            {% if loop.index % 2 == 0 or loop.last %}
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
